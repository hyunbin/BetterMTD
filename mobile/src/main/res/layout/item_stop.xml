<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/listitem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

  <!-- Bus headsign label -->
  <TextView
      android:id="@+id/headsign"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="false"
      android:paddingBottom="2dp"
      android:paddingLeft="6dp"
      android:paddingTop="5dp"
      android:textSize="16sp"/>

  <!-- iStop label -->
  <ImageView
      android:id="@+id/iStopView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/headsign"
      android:adjustViewBounds="true"
      android:gravity="center_vertical"
      android:maxHeight="28dp"
      android:maxWidth="28dp"
      android:paddingBottom="4dp"
      android:paddingLeft="4dp"
      android:paddingTop="9dp"
      android:scaleType="fitXY"/>

  <!-- subtext label -->
  <TextView
      android:id="@+id/subtext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:paddingBottom="6dip"
      android:paddingLeft="6dp"
      android:textColor="#acacac"
      android:textSize="12sp"
      />

  <RelativeLayout
      android:layout_width="40dp"
      android:layout_height="fill_parent"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical">

    <!-- Bus expected time label -->
    <TextView
        android:id="@+id/expectedmins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingRight="6dp"
        android:textColor="#acacac"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <!-- mins text label -->
    <TextView
        android:id="@+id/minslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expectedmins"
        android:layout_centerHorizontal="true"
        android:paddingBottom="6dip"
        android:paddingRight="6dp"
        android:text="min"
        android:textColor="#acacac"
        android:textSize="12sp"
        />

  </RelativeLayout>

</RelativeLayout>